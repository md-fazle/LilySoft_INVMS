<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LilySoft_INVMS</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/sidebar.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/home.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/table.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/LilySoft_INVMS.styles.css" asp-append-version="true" />
 
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" />
</head>
<body>
    <!-- Sidebar -->
    <div class="sidebar" id="sidebar">
        <div class="sidebar-header">
            <!-- Logo Section -->
            <div class="logo-container">
                <a asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/img/Logo.png" alt="Logo" class="logo-img" />
                </a>
            </div>
            <h3>LilySoft_INVMS</h3>
            <button class="toggle-btn" id="toggle-btn">&#9776;</button>
        </div>

        <ul class="nav flex-column sidebar-menu">
            <li class="nav-item">
                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-house"></i> <span>Home</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-area="" asp-controller="Product" asp-action="Index">
                    <i class="bi bi-box-seam"></i> <span>Products</span>
                </a>
            </li>

            <li class="nav-item">
                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy">
                    <i class="bi bi-shield-lock"></i> <span>Privacy</span>
                </a>
            </li>
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" id="setupDropdown" role="button"
                   data-bs-toggle="dropdown" aria-expanded="false">
                    <i class="bi bi-gear"></i> <span>Setups</span>
                </a>
                <ul class="dropdown-menu" aria-labelledby="setupDropdown">
                    <li>
                        <a class="dropdown-item" asp-controller="Category" asp-action="Index">
                            <i class="bi bi-list-ul"></i> Category
                        </a>
                    </li>
                    <li>
                        <a class="dropdown-item" asp-controller="Warehouse" asp-action="Index">
                            <i class="bi bi-list-ul"></i> Warehouse
                        </a>
                    </li>
                    <li>
                        <a class="dropdown-item" asp-controller="Supplier" asp-action="Index">
                            <i class="bi bi-list-ul"></i> Suppliers
                        </a>
                    </li>
                    <li>
                        <a class="dropdown-item" asp-controller="Customer" asp-action="Index">
                            <i class="bi bi-list-ul"></i> Customers
                        </a>
                    </li>
                    <li>
                        <a class="dropdown-item" asp-controller="Stock" asp-action="Index">
                            <i class="bi bi-list-ul"></i> Stock
                        </a>
                    </li>
                    <!-- You can add more setup options here later -->
                </ul>
            </li>

            <li class="nav-item">
                <partial name="_LoginPartial" />
            </li>
        </ul>
    </div>

    <!-- Content -->
    <div class="content">
        <main role="main" class="main-content">
            @RenderBody()
        </main>

        <footer class="footer text-muted" style="line-height: 10px;">
            <div class="container">
                &copy; 2025 - LilySoft_INVMS -
                <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </div>
        </footer>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/sidebar.js" asp-append-version="true"></script> <!-- Added for toggle -->
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/dataTable.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
