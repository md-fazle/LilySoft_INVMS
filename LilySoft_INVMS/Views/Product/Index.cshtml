@model IEnumerable<LilySoft_INVMS.Models.Invms.Product>
@{
    ViewData["Title"] = "Products";
}

<div class="container mt-4">
    <h2 class="mb-3">📦 Products</h2>
    <a asp-action="Create" class="btn btn-primary mb-3">
        <i class="bi bi-plus-circle"></i> Add New Product
    </a>

    <div class="card shadow-lg rounded-3">
        <div class="card-body">
            <table class="table table-striped table-hover align-middle">
                <thead class="table-dark">
                    <tr>
                        <th>Image</th>
                        <th>Product ID</th>
                        <th>Name</th>
                        <th>Price</th>
                        <th>Category</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @if (!string.IsNullOrEmpty(item.product_image))
                                {
                                    <img src="@item.product_image" width="50" height="50" class="rounded" />
                                }
                                else
                                {
                                    <span class="text-muted">No Image</span>
                                }
                            </td>
                            <td>@item.product_id</td>
                            <td>@item.product_name</td>
                            <td>@item.product_price?.ToString("C")</td>
                            <td>@item.Category?.catagory_name</td>
                            <td class="text-center">
                                <a asp-action="Edit" asp-route-id="@item.id" class="btn btn-sm btn-warning me-1">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.id" class="btn btn-sm btn-danger">
                                    <i class="bi bi-trash"></i> Delete
                                </a>
                                <a asp-action="Details" asp-route-id="@item.id" class="btn btn-sm btn-info">
                                    <i class="bi bi-eye"></i> Details
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
