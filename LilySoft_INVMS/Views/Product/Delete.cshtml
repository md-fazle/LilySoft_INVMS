@model LilySoft_INVMS.Models.Invms.Product
@{
    ViewData["Title"] = "Delete Product";
}

<div class="container mt-4">
    <h2>🗑️ Delete Product</h2>
    <hr />

    <h4>Are you sure you want to delete this product?</h4>
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.product_name</dd>

        <dt class="col-sm-2">Price</dt>
        <dd class="col-sm-10">@Model.product_price?.ToString("C")</dd>

        <dt class="col-sm-2">Category</dt>
        <dd class="col-sm-10">@Model.Category?.catagory_name</dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
