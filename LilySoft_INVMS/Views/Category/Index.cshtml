@model IEnumerable<LilySoft_INVMS.Models.Invms.Category>
@{
    ViewData["Title"] = "Categories";
}

<div class="table-container">
    <h2>📂 Categories</h2>

    <!-- Search box -->
    <input type="text" id="tableSearch" placeholder="🔍 Search categories..." class="mb-3" />

    <!-- Add New Category Button -->
    <a asp-action="Create" class="btn btn-primary mb-3">
        <i class="bi bi-plus-circle"></i> Add New Category
    </a>

    <!-- Table Card -->
    <div class="card shadow-lg rounded-3">
        <div class="card-body">
            <table id="categoryTable" class="table table-striped table-hover align-middle">
                <thead>
                    <tr>
                        <th>Category ID</th>
                        <th>Name</th>
                        <th>Description</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.catagory_id</td>
                            <td>@item.catagory_name</td>
                            <td>@item.catagory_description</td>
                            <td class="text-center">
                                <a asp-action="Edit" asp-route-id="@item.id" class="btn btn-sm btn-warning me-1">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.id" class="btn btn-sm btn-danger">
                                    <i class="bi bi-trash"></i> Delete
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

 