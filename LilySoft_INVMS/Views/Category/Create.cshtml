@model LilySoft_INVMS.Models.Invms.Category

<div class="container mt-4">
    <h2>Create Category</h2>
    <form asp-action="Create">
        <div class="mb-3">
            <label asp-for="catagory_id" class="form-label"></label>
            <input asp-for="catagory_id" class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="catagory_name" class="form-label"></label>
            <input asp-for="catagory_name" class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="catagory_description" class="form-label"></label>
            <textarea asp-for="catagory_description" class="form-control"></textarea>
        </div>
        <button type="submit" class="btn btn-success">Save</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
