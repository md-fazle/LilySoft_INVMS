@model LilySoft_INVMS.Models.Invms.PurchaseRequest

@{
    ViewData["Title"] = "Delete Purchase Request";
}

<h1>Delete Purchase Request</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Purchase Request</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">PR ID:</dt>
        <dd class="col-sm-9">@Model.purchase_request_id</dd>

        <dt class="col-sm-3">Request Date:</dt>
        <dd class="col-sm-9">@Model.RequestDate.ToString("yyyy-MM-dd")</dd>

        <dt class="col-sm-3">Items Count:</dt>
        <dd class="col-sm-9">@Model.PRDetails.Count</dd>

        <dt class="col-sm-3">Total Amount:</dt>
        <dd class="col-sm-9">@Model.PRDetails.Sum(d => d.total_price).ToString("C")</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>