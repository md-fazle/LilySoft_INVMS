@model LilySoft_INVMS.Models.Invms.Stock

<h2>Delete Stock</h2>

<h4>Are you sure you want to delete this stock record?</h4>
<hr />

<dl class="row">
    <dt class="col-sm-2">Stock ID</dt>
    <dd class="col-sm-10">@Model.stock_id</dd>

    <dt class="col-sm-2">Product</dt>
    <dd class="col-sm-10">@Model.Product?.product_name</dd>

    <dt class="col-sm-2">Warehouse</dt>
    <dd class="col-sm-10">@Model.Warehouse?.warehouse_name</dd>

    <dt class="col-sm-2">Quantity</dt>
    <dd class="col-sm-10">@Model.quantity</dd>
</dl>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
