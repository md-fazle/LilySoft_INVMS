@model LilySoft_INVMS.Auth.Models.Users

@{
    ViewData["Title"] = "User Registration";
}

<section class="vh-100 gradient-custom">
    <div class="container py-5 h-100">
        <div class="row justify-content-center align-items-center h-100">
            <div class="col-12 col-lg-9 col-xl-7">
                <div class="card shadow-2-strong card-registration" style="border-radius: 15px;">
                    <div class="card-body p-4 p-md-5">
                        <h3 class="mb-4 pb-2 pb-md-0 mb-md-5">User Registration</h3>

                        <form asp-action="Register" method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                            <div class="row">
                                <div class="col-md-6 mb-4">
                                    <div class="form-outline">
                                        <input asp-for="userName" class="form-control form-control-lg" />
                                        <label class="form-label" for="UserName">Username</label>
                                        <span asp-validation-for="userName" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6 mb-4">
                                    <div class="form-outline">
                                        <input asp-for="password" type="password" class="form-control form-control-lg" />
                                        <label class="form-label" for="PasswordHash">Password</label>
                                        <span asp-validation-for="password" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-4 pb-2">
                                    <div class="form-outline">
                                        <input asp-for="email" class="form-control form-control-lg" />
                                        <label class="form-label" for="Email">Email</label>
                                        <span asp-validation-for="email" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6 mb-4 pb-2">
                                    <div class="form-outline">
                                        <input asp-for="phoneNumber" class="form-control form-control-lg" />
                                        <label class="form-label" for="PhoneNumber">Phone Number</label>
                                        <span asp-validation-for="phoneNumber" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-12 mb-4">
                                    <label asp-for="RoleId" class="form-label">Role</label>
                                    <select asp-for="RoleId" class="form-select form-control-lg"
                                            asp-items="@(new SelectList(ViewBag.RoleList, "RoleId", "RoleName"))">
                                        <option value="">-- Choose Role --</option>
                                    </select>
                                    <span asp-validation-for="RoleId" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="mt-4 pt-2">
                                <input class="btn btn-primary btn-lg" type="submit" value="Register" />
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
