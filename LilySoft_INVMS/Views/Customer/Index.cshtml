@model IEnumerable<LilySoft_INVMS.Models.Invms.Customer>

<h2>Customers</h2>
<a asp-action="Create" class="btn btn-primary mb-3">Add Customer</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Customer ID</th>
            <th>Customer Name</th>
            <th>Contacts</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var c in Model)
        {
            <tr>
                <td>@c.customer_id</td>
                <td>@c.customer_name</td>
                <td>
                    @if (c.customerContacts != null)
                    {
                        foreach (var contact in c.customerContacts)
                        {
                            <div>@contact.contact_name - @contact.contact_address</div>
                        }
                    }
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@c.id" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@c.id" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
