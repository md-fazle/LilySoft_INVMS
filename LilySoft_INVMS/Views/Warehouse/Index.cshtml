@model IEnumerable<LilySoft_INVMS.Models.Invms.Warehouse>
@{
    ViewData["Title"] = "Warehouses";
}

<div class="container mt-4">
    <h2>🏭 Warehouses</h2>
    <a asp-action="Create" class="btn btn-primary mb-3"><i class="bi bi-plus-circle"></i> Add New Warehouse</a>

    <div class="card shadow-lg rounded-3">
        <div class="card-body">
            <table class="table table-striped table-hover align-middle">
                <thead class="table-dark">
                    <tr>
                        <th>Warehouse ID</th>
                        <th>Name</th>
                        <th>Location</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var warehouse in Model)
                    {
                        <tr>
                            <td>@warehouse.warehouse_id</td>
                            <td>@warehouse.warehouse_name</td>
                            <td>@warehouse.warehouse_location</td>
                            <td class="text-center">
                                <a asp-action="Edit" asp-route-id="@warehouse.id" class="btn btn-sm btn-warning me-1">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>
                                <a asp-action="Delete" asp-route-id="@warehouse.id" class="btn btn-sm btn-danger">
                                    <i class="bi bi-trash"></i> Delete
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
