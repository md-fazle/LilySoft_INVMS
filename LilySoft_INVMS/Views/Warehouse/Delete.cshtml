@model LilySoft_INVMS.Models.Invms.Warehouse
@{
    ViewData["Title"] = "Delete Warehouse";
}

<div class="container mt-4">
    <h2>🗑️ Delete Warehouse</h2>
    <div class="card shadow-sm p-4 mt-3" style="max-width:600px;">
        <h5>Are you sure you want to delete this warehouse?</h5>

        <div class="mb-3 mt-3">
            <strong>ID:</strong> @Model.warehouse_id <br />
            <strong>Name:</strong> @Model.warehouse_name <br />
            <strong>Location:</strong> @Model.warehouse_location
        </div>

        <form asp-action="DeleteConfirmed" method="post">
            <input type="hidden" asp-for="id" />
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>
