@model LilySoft_INVMS.Models.Invms.Supplier

@{
    ViewData["Title"] = "Delete Supplier";
}

<h2>Delete Supplier</h2>

<div class="mt-3">
    <h4>Are you sure you want to delete this supplier?</h4>
    <hr />

    <dl class="row">
        <dt class="col-sm-2">Supplier ID</dt>
        <dd class="col-sm-10">@Model.supplier_id</dd>

        <dt class="col-sm-2">Supplier Name</dt>
        <dd class="col-sm-10">@Model.supplier_name</dd>

        <dt class="col-sm-2">Contacts</dt>
        <dd class="col-sm-10">
            @if (Model.SupplierContacts != null && Model.SupplierContacts.Any())
            {
                foreach (var contact in Model.SupplierContacts)
                {
                    <div>
                        <strong>@contact.contact_name</strong><br />
                        Email: @contact.contact_email<br />
                        Phone: @contact.contact_phone<br />
                        Address: @contact.contact_address
                    </div>
                    <hr />
                }
            }
            else
            {
                <div>No contacts available.</div>
            }
        </dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
